---
import background from '../assets/background.svg';

import { Image } from 'astro:assets';
import GitHubLogo from '../assets/github.svg';
import LinkedInLogo from '../assets/linkedin.svg';

import Layout from '../layouts/Layout.astro';
import Hello from '../components/Hello.astro';
import Bento from '../components/Bento.astro';

import Text from '../components/Text.astro';
---

<Layout>
	<div id="container">
		<img id="background" src={background.src} alt="" fetchpriority="high" />

		<div id="content">

			<div id="welcome">
				<Hello />
			</div>

			<div id="bento-container">
				<div id="bento-row">
					<Bento/>
					<Bento size="s1x3"/>
				</div>
				<div id="bento-row">
					<Bento size="s1x2">
						<Text>
							Social Links
						</Text>
					</Bento>

					<Bento>
						<Image src={GitHubLogo} alt=""/>
					</Bento>

					<Bento>
						<Image src={LinkedInLogo} alt=""/>
					</Bento>
				</div>
				<div id="bento-row">
					<Bento size="s1x4"/>
				</div>
				<div id="bento-row">
					<Bento />
					<Bento />
					<Bento />
					<Bento />
				</div>
			</div>

		</div>
	
	</div>
</Layout>

<style>
	#container {
		font-family: monospace;
		height: 100%;
	}

	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(50px);
	}

	#content {
		display: flex;
		align-items: center;
		flex-direction: column;
		overflow: visible;
	}

	#welcome {
		display: flex;
		align-items: center;
		flex-direction: row;
		justify-content: center;
	}

	#bento-container {
		display: flex;
		align-items: flex-start;
		flex-direction: column;
		justify-content: center;
		width: 80%;
	}

	#bento-row {
		display: flex;
		align-items: center;
		flex-direction: row;
		justify-content: center;
		width: 100%;
	}
</style>
